<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GpsActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#0042de"
        >

        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:src="@drawable/logo3"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:text="Turn On GPS"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24sp"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="257sp"
            android:layout_height="101sp"
            android:layout_gravity="center"
            android:text="To enjoy a good experience ensure your GPS is turned on not to miss a coupon"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/accept"
            android:layout_width="208sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ok"
            android:textColor="@android:color/white"
            android:background="#0fdf77"
            android:layout_margin="20sp"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>